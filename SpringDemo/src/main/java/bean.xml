<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
             http://www.springframework.org/schema/beans
             http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="empBean" class="com.test.springdemo.bean.Employee" autowire="byName">
<property name="empId" value="1001"></property>
<property name="empName" value="AjayReddy"></property>
<property name="empAddress" value="Hyderabad"></property>

</bean>  
 
<bean id="department" class="com.test.springdemo.bean.Department">
<property name="deptId" value="10"></property>
<property name="deptName" value="CSE"></property>
</bean>  


